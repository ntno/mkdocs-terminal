{% macro make_tile( tile ) -%}
<div id="{{ tile.id }}" class="terminal-mkdocs-tile {{ tile.class }}">
    <figure>
        {{ make_link_start(
            tile.link_href,
            tile.link_title, 
            tile.link_alt,
            tile.link_target
        ) }}


        {% if tile.link_href is defined and tile.link_href|length %}
        {{ make_link_end(
            tile.link_text|default(tile.link_href, true)
        ) }}
        {% endif %}
        {% if tile.caption %}<figcaption>{{ tile.caption|trim}}</figcaption>{% endif %}
    </figure>
</div>
{%- endmacro -%}

{% macro make_image( src, title, alt, width, height) -%}
<img src="{{ src|trim }}" title="{{ title|trim }}" alt="{{ alt|trim }}" width="{{ width|trim|default('auto', true ) }}" height="{{ height|trim|default('auto', true ) }}" >
{%- endmacro -%}

{% macro make_link_start( href, title, alt, target) -%}
{% if href is defined and href|length %}
<a  href="{{ href }}" 
    {% if title is defined and title|length %}title="{{ title }}"{% endif %} 
    {% if alt is defined and alt|length %}alt="{{ alt }}"{% endif %} 
    {% if target is defined and target|length %}target="{{ target }}"{% endif %} 
>
{% endif %}
{%- endmacro -%}

{% macro make_link_end( text ) -%}
{{ text }}</a>
{%- endmacro -%}

